<h2>New item</h2>
<%= render 'form' %>

<h2>Check the things you need</h2>
<h5>Edit to add location</h5>
<div>
  <% if @items.any? %>
    <%= form_with url: update_to_get_path, method: :put do |item_check| %>
      <ul id="to-get-list" class="no-bullet-list">
        <% for item in @items %>
          <li id="item-<%= item.id %>">
            <%= check_box_tag dom_id(item, :checkbox), "", item.to_get ? true : false, data: {url: update_to_get_path(item), method: :put, remote: true }  %>
            <%= label_tag "check_box-#{item.id}", item.name, class: '' %>
            <%= link_to "edit", edit_item_path(item.id) %> <br />
          </li>

        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
